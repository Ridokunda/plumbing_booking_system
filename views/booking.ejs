<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    
    <title>WeFixIt | <%= title %></title>
    
    <!-- slider stylesheet -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.css" />
    <!-- font awesome style -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/font-awesome.min.css" />
    
    <!-- Custom styles for this template -->
    <link href="/stylesheets/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="/stylesheets/responsive.css" rel="stylesheet" />
    <link rel='stylesheet' href='/stylesheets/custom.css' />
</head>
<body>
    <%- include('./partials/head') %>
    
    <div class="mybookings-container" style="justify-content: center; align-items: center; padding-top: 40px;">
        <div class="form-container" style="background: #fff; border-radius: 16px; box-shadow: 0 2px 12px rgba(0,0,0,0.06); padding: 40px; width: 100%; max-width: 600px; margin-top: 100px;">
            <h1 style="color: #0355cc; font-size: 2.5rem; font-weight: bold; margin-bottom: 30px; text-align: center;">Booking Details</h1>
            
            <form id="bookingForm" action="/booking/book" method="post" style="display: flex; flex-direction: column; gap: 20px;">
                <div style="display: flex; flex-direction: column; gap: 8px;">
                    <label style="font-weight: 600; color: #333; font-size: 0.9rem;">Select Service Type</label>
                    <select name="service" id="service" style="padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 1rem; background-color: white;">
                        <option value="Plumbing_Installation">Plumbing Installation</option>
                        <option value="Plumbing_Fix">Plumbing Fix</option>
                        <option value="Plumbing_Maintenance">Plumbing Maintenance</option>
                        <option value="Electrical_Fix">Electrical Fix</option>
                        <option value="Electrical_Installation">Electrical Installation</option>
                        <option value="Electrical_Maintenance">Electrical Maintenance</option>
                    </select>
                </div>
                
                <div style="display: flex; flex-direction: column; gap: 8px;">
                    <label style="font-weight: 600; color: #333; font-size: 0.9rem;">Description</label>
                    <textarea 
                        name="description" 
                        id="description" 
                        style="padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 1rem; min-height: 120px; resize: vertical;"
                        required
                    ></textarea>
                </div>
                
                <div style="display: flex; flex-direction: column; gap: 8px;">
                    <label style="font-weight: 600; color: #333; font-size: 0.9rem;">Date You Will Be Available</label>
                    <div id="dateInputs" style="display:flex; gap:8px; align-items:center; flex-wrap:wrap;">
                      <input 
                          type="date" 
                          name="date_start" 
                          class="date-input"
                          id="date_start"
                          style="padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 1rem;"
                          required
                      >
                    </div>
                    <div style="margin-top:6px;">
                      <button type="button" id="addDateBtn" style="background:#0355cc; color:#fff; border:none; border-radius:6px; padding:8px 12px; cursor:pointer;">+ Add date</button>
                    </div>
                </div>
                
                <div style="display: flex; flex-direction: column; gap: 8px;">
                    <label style="font-weight: 600; color: #333; font-size: 0.9rem;">Your Location</label>
                    <input 
                        type="text" 
                        name="location" 
                        id="location"
                        style="padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 1rem;"
                    >
                </div>
                
                <button 
                    id="btn_submit" 
                    type="submit"
                    style="background-color: #0355cc; color: white; border: none; border-radius: 8px; padding: 12px 24px; font-size: 1rem; cursor: pointer; transition: background-color 0.3s; margin-top: 10px; position:relative; z-index:9999; pointer-events:auto;"
                    onmouseover="this.style.backgroundColor='#0d5a6a'" 
                    onmouseout="this.style.backgroundColor='#0355cc'"
                >
                    Book Service
                </button>
                
                <div id="booking-message" style="display: none; padding: 15px 20px; border-radius: 8px; margin-top: 10px;"></div>
            </form>
        </div>
    </div>
    
    <%- include('./partials/footer') %>
    
    <script>
        // Restrict date input to today and future dates only
        document.addEventListener('DOMContentLoaded', function() {
            var dateInput = document.getElementById('date_start');
            var today = new Date();
            var yyyy = today.getFullYear();
            var mm = String(today.getMonth() + 1).padStart(2, '0');
            var dd = String(today.getDate()).padStart(2, '0');
            var todayStr = yyyy + '-' + mm + '-' + dd;
            dateInput.setAttribute('min', todayStr);

            // AJAX booking form submission
            var bookingForm = document.getElementById('bookingForm');
            var messageDiv = document.getElementById('booking-message');
                bookingForm.addEventListener('submit', function(e) {
                e.preventDefault();
                var formData = new FormData(bookingForm);
                var data = {};
                // Build data object, preserving multiple date_start entries as arrays
                formData.forEach((value, key) => {
                    if (key === 'date_start') {
                        if (!data[key]) data[key] = [];
                        data[key].push(value);
                    } else {
                        // if multiple fields with same name (other than dates) exist, convert to array
                        if (data[key] !== undefined) {
                            if (!Array.isArray(data[key])) data[key] = [data[key]];
                            data[key].push(value);
                        } else {
                            data[key] = value;
                        }
                    }
                });
                
                fetch('/booking/book', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(result => {
                    messageDiv.style.display = 'block';
                    messageDiv.textContent = result.message;
                    if(result.success) {
                        messageDiv.className = 'message success';
                        bookingForm.reset();
                    } else {
                        messageDiv.className = 'message error';
                    }
                })
                .catch(err => {
                    messageDiv.style.display = 'block';
                    messageDiv.textContent = 'An error occurred. Please try again.';
                    messageDiv.className = 'message error';
                });
            });
            // Add date button logic: clone a date input
            document.getElementById('addDateBtn').addEventListener('click', function() {
                var container = document.getElementById('dateInputs');
                var newInput = document.createElement('input');
                newInput.type = 'date';
                newInput.name = 'date_start';
                newInput.className = 'date-input';
                newInput.style = 'padding: 12px; border: 1px solid #ddd; border-radius: 8px; font-size: 1rem;';
                // set min to today (todayStr is defined above in this scope)
                try { if (typeof todayStr !== 'undefined') newInput.setAttribute('min', todayStr); } catch(e) {}
                // add a remove button next to it
                var removeBtn = document.createElement('button');
                removeBtn.type = 'button';
                removeBtn.textContent = 'Remove';
                removeBtn.style = 'background:#6c757d; color:#fff; border:none; border-radius:6px; padding:8px 10px; cursor:pointer; margin-left:4px;';
                var wrapper = document.createElement('div');
                wrapper.style = 'display:flex; gap:8px; align-items:center;';
                wrapper.appendChild(newInput);
                wrapper.appendChild(removeBtn);
                container.appendChild(wrapper);
                removeBtn.addEventListener('click', function() { container.removeChild(wrapper); });
            });
        });
    </script>
</body>
</html>